<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/playlist_image"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_playlist" />

        <TextView
            android:id="@+id/playlist_name"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/playlist_image"
            android:text="Playlist Name"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/playlist_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playlist_name"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/playlist_image"
            android:text="Genre Pop" />

        <TextView
            android:id="@+id/playlist_songCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/playlist_image"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/playlist_image"
            android:alpha="0.8"
            android:text="Number of songs 0"
            android:textSize="12dp" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:id="@+id/playlist_delete"
            android:src="@drawable/icon_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>