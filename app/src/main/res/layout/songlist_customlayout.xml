<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/songFrag_artistImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/musiclogo" />
        <!--app:civ_border_color="@color/white"-->
        <!--app:civ_border_width="2dp" />-->

    <TextView
        android:id="@+id/artistTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/songFrag_artistImg"
        android:text="Artist"
        android:textColor="@color/black"
        android:autoSizeTextType="uniform"/>

    <TextView
        android:id="@+id/songNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/artistTxt"
        android:layout_toRightOf="@id/songFrag_artistImg"
        android:text="Song Name"
        android:autoSizeTextType="uniform"
        android:textColor="#FF6D15" />

    <TextView
        android:id="@+id/genre"
        android:text="Genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/songNameTxt"
        android:textSize="12dp"
        android:alpha="0.6"
        android:layout_toRightOf="@id/songFrag_artistImg"/>

    <ImageView
        android:id="@+id/favButton"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginTop="12dp"
        android:src="@drawable/logo_favorite_half"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>